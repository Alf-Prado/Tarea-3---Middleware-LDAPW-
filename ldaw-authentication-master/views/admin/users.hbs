<h1 style="text-align: center !important; margin-bottom: 3%">List of Users</h1>

<table style="width: 50%; margin: 0 auto">
    <tr style="font-weight: bold;">
        <th style="border: 1px solid; padding: 5px">Name</th>
        <th style="border: 1px solid; padding: 5px">Email</th>
        <th style="border: 1px solid; padding: 5px">Role</th>
    </tr>

    {{#each users}}
        <tr>
            <td style="border: 1px solid; padding: 5px">{{name}}</td>
            <td style="border: 1px solid; padding: 5px">{{email}}</td>
            <td style="border: 1px solid; padding: 5px">{{role}}</td>
        </tr>
    {{/each}}

</table>